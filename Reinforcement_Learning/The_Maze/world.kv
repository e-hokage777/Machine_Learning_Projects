Game:

<Agent>:
    size_hint: None, None
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "assets/agent.png"


<Game>:
    maze: maze
    # canvas:
    #     Color:
    #         rgb: 0, 1, 1
    #     Rectangle:
    #         size: self.size
    #         pos: self.pos
    Maze:
        id: maze
        agent: agent
        size_hint: None, None
        size: root.MAZE_WIDTH, root.MAZE_HEIGHT
        pos: root.width * 0.5 - self.width*0.5, root.height * 0.5 - self.height*0.5
        num_tiles: root.NUM_TILES
        num_enemies: root.NUM_ENEMIES
        
        Agent:
            id: agent
        

<QTile>:
    size_hint: None, None
    canvas.before:
        Color:
            rgb: 0,0,0
        Line:
            rectangle: self.pos[0], self.pos[1], self.width, self.height
        # Rectangle:
        #     size: self.size
        #     pos: self.pos

    Label:
        text: root.action_0
        pos_hint: {"top": 1, "x": 0}
        size_hint: 1, 0.25
        font_size: 15
        color: "white"
    Label:
        text: root.action_1
        pos_hint: {"center_y": 0.5, "right": 1}
        size_hint: 0.25, 1
        font_size: 15
        color: "white"
    Label:
        text: root.action_2
        pos_hint: {"y": 0, "x": 0}
        size_hint: 1, 0.25
        font_size: 15
        color: "white"
    Label:
        text: root.action_3
        pos_hint: {"center_y": 0.5, "x": 0}
        size_hint: 0.25, 1
        font_size: 15
        color: "white"


<QGrid>
    size_hint: None, None
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    # opacity: 0.5
    canvas.before:
        Color:
            rgba: 0, 1, 1, 0.1
        Rectangle:
            size: self.size
            pos: self.pos