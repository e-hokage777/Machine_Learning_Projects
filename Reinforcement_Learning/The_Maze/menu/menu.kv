#: set radio_width_hint 0.2

<MenuWidget>:
    name: "menu"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "T H E  M A Z E"
            font_size: 20
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                Label:
                    text: "mode"
                BoxLayout:
                    BoxLayout:
                        CheckBox:
                            group: "game_mode"
                            size_hint: radio_width_hint, 1
                        Label:
                            text: "Manual"
                            text_size: self.size
                            valign: "middle"
                    BoxLayout:
                        CheckBox:
                            group: "game_mode"
                            size_hint: radio_width_hint, 1
                        Label:
                            text: "Auto"
                            text_size: self.size
                            valign: "middle"
            BoxLayout:
                Label:
                    text: "Maze Size"
                Label:
                    text: "width and height"
            BoxLayout:
                Label:
                    text: "Number of Enemies"
                Label:
                    text: "Value"
            BoxLayout:
                Label:
                    text: "Game Speed"
                Slider:
        Button:
            text: "S T A R T"
            on_press:
                root.manager.transition.direction = "left"
                app.root.current = "game"