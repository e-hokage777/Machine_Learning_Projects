GameWidget:
    BoxLayout:
        opacity: 0.5
        width: 300
        Button:
            text: "Clear"
            on_press:
                root.clear_sand()
        Button:
            text: "Save"
            on_press:
                root.save_car_brain()
        Button:
            text: "Load"
            on_press:
                root.load_car_brain()

<Car>:
    canvas.before:
        Color:
            rgb: 1,1,1
        PushMatrix
        Rotate:
            origin: self.center
            angle: self.angle
        Rectangle:
            pos: self.pos
            size: self.size
        PopMatrix
    


<Sensor>:
    maka: "working"
    canvas:
        Color:
            rgba: self.color
        Ellipse:
            size: self.size
            pos: self.pos

<PaintWidget>:
    size: root.size
